<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/activity_background</item>
        <item name="android:buttonStyle">@style/DefaultButton</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/red</item><!-- only way to change this is to change the src image -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
